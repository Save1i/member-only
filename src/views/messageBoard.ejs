<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Board</title>
</head>
<body>
    <% if(isAuth){ %>
        <a href="/user/log-out">log out</a>
        <a href="/user/profile">profile</a>
    <% }else{ %>
        <a href="/user/log-in">log in</a>
        <br>
        <p>or</p>
        <a href="/user/sign-up">create account</a>
        <br>
    <% } %>
    <a href="/message/create">write message</a>
    <% if(messages) { %> 
        <ul>
            <% messages.forEach(element => { %>
                <li><%= element.title %></li>
                <li><%= element.message %></li>
                <li>from: <%= element.nickname ? element.nickname : "anoninst" %></li>
                <br>
          <% }) %>
        </ul>
    <% } %>
    
</body>
</html>